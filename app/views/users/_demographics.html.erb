<div class= "user-section-wrapper">
	<div class="row">
		<div class="col-md-12">
			<h3>Demographic Information</h3>
			<h4>First Name: <%= @user.first_name %></h4>
			<h4>Last Name: <%= @user.last_name %></h4>
			<h4>Email: <%= @user.email %></h4>
			<h4>Phone: <%= @user.phone %></h4>
			<h4>Default Billing Address:</h4>
			<% if @user.default_billing_address_id %>
				<p><%= "#{@user.default_billing_address_id.street_address} #{@user.default_billing_address_id.secondary_address}, #{@user.default_billing_address_id.city.name} #{@user.default_billing_address_id.state.name}"%></p>
			<% else %>
				<p><%= "123 Fake Street, San Fransisco, CA"%></p>
			<% end %>
			<h4>Default Shipping Address:</h4>
			<% if @user.default_shipping_address_id %>
				<p><%= "#{@user.default_shipping_address_id.street_address} #{@user.default_shipping_address_id.secondary_address}, #{@user.default_shipping_address_id.city.name} #{@user.default_shipping_address_id.state.name}"%></p>
			<% else %>
				<p><%= "123 Fake Street, San Fransisco, CA"%></p>
			<% end %>
			<%= link_to "Edit #{@user.first_name} #{@user.last_name}'s Information", edit_user_path(@user.id) %><br>
			<%= link_to "Delete #{@user.first_name} #{@user.last_name}", user_path(@user.id), method: "delete", data: {confirm: "Do you really want to delete?"} %><br>
			<%= link_to "View Saved Addresses", user_addresses_path(@user.id) %><br>
			<% if @user.has_cart? %>
				<%= link_to "View Cart", user_orders_path(@user.id) %><br>
			<% else %>
				<p>View Cart</p>
			<% end %>
		</div>
	</div>
</div>